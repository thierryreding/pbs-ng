  - download:
      url: https://gstreamer.freedesktop.org/src/gst-plugins-base/gst-plugins-base-${version}.tar.xz
      sha1: f9b15502997936ac7460b3c414dfb5dd9c835339

depends:
  - libs/glib
  - libs/gdk-pixbuf
  - libs/graphene
  - libs/libdrm
  - libs/libgudev
