include $(TOP_SRCDIR)/packages/cmake.mk

ifeq ($(ARCH),arm64)
  ARCH = aarch64
endif

MULTIARCH = $(ARCH)-$(OS)-$(LIBC)

env += \
	_PYTHON_SYSCONFIGDATA_NAME=_sysconfigdata__$(OS)_$(MULTIARCH)

cmake-args += \
	-DCOMPILER_SUPPORTS_ATOMIC_WITHOUT_LIBATOMIC_EXITCODE__TRYRUN_OUTPUT=0 \
	-DCOMPILER_SUPPORTS_ATOMIC_WITHOUT_LIBATOMIC_EXITCODE=1 \
	-DUSE_STD_REGEX_EXITCODE__TRYRUN_OUTPUT=0 \
	-DUSE_STD_REGEX_EXITCODE=1 \
	-DUSE_QT5=OFF
