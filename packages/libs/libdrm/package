description: Userspace interface to kernel DRM services
version: 2.4.82
license: custom

depends:
  - build-tools/xorg/util-macros
  - devel/glibc
  - libs/libpciaccess
  - libs/libpthread-stubs

files:
  - download:
      url: http://dri.freedesktop.org/libdrm/libdrm-${version}.tar.bz2
      sha1: c42ff308db6352eaf009a8209c7aaadbc951a89f

options:
  kms:
    description: enable libkms support
    default: yes

  intel:
    description: enable Intel API
    default: no

  vmwgfx:
    description: enable vmwgfx API
    default: no

  radeon:
    description: enable Radeon API
    default: no

  nouveau:
    description: enable Nouveau API
    default: yes

  omap:
    description: enable OMAP API
    default: no

  exynos:
    description: enable EXYNOS API
    default: no

  freedreno:
    description: enable Freedreno API
    default: no

  tegra:
    description: enable Tegra API
    default: yes

packages:
  libdrm:
    files:
      - /usr/lib/*.so.*

  libdrm-utils:
    files:
      - /usr/bin/kms-*
      - /usr/bin/modeprint
      - /usr/bin/modetest
      - /usr/bin/proptest
      - /usr/bin/vbltest

  libdrm-dev:
    files:
      - /usr/include
      - /usr/lib/*.a
      - /usr/lib/*.so
      - /usr/lib/pkgconfig

  libdrm-man:
    files:
      - /usr/share/man

