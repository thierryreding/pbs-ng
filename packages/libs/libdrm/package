description: Userspace interface to kernel DRM services
version: 2.4.113
license: custom

depends:
  - build-tools/xorg/util-macros
  - devel/glibc
  - libs/libpciaccess
  - libs/libpthread-stubs

files:
  - download:
      url: http://dri.freedesktop.org/libdrm/libdrm-${version}.tar.xz
      sha1: eb7db45e34586d3ec048fd2e9b704016793ca957

options:
  intel:
    description: enable Intel API
    default: no

  radeon:
    description: enable Radeon API
    default: no

  amdgpu:
    description: enable AMD GPU API
    default: no

  nouveau:
    description: enable Nouveau API
    default: no

  vmwgfx:
    description: enable vmwgfx API
    default: no

  omap:
    description: enable OMAP API
    default: no

  exynos:
    description: enable EXYNOS API
    default: no

  freedreno:
    description: enable Freedreno API
    default: no

  tegra:
    description: enable Tegra API
    default: no

  vc4:
    description: enable VC4 API
    default: no

  etnaviv:
    description: enable etnaviv API
    default: no

packages:
  libdrm:
    files:
      - /usr/lib/*.so.*

  libdrm-utils:
    files:
      - /usr/bin/kms-*
      - /usr/bin/kmsctl
      - /usr/bin/kmstest
      - /usr/bin/modeprint
      - /usr/bin/modetest
      - /usr/bin/nouveau-*
      - /usr/bin/proptest
      - /usr/bin/tegra-*
      - /usr/bin/vbltest

  libdrm-dev:
    files:
      - /usr/include
      - /usr/lib/*.a
      - /usr/lib/*.so
      - /usr/lib/pkgconfig

  libdrm-man:
    files:
      - /usr/share/man

