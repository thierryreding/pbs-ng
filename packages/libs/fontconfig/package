description: A library for configuring and customizing font access
version: 2.13.0
license: custom

depends:
  - devel/glibc
  - libs/expat
  - libs/freetype

files:
  - download:
      url: http://fontconfig.org/release/fontconfig-${version}.tar.gz
      sha1: 91f692d9100d2817cf30181cd0205d60168a28a5

packages:
  libfontconfig:
    files:
      - /etc/fonts
      - /usr/lib/*.so.*
      - /usr/share/fontconfig
      - /usr/share/xml

  libfontconfig-bin:
    files:
      - /usr/bin

  libfontconfig-dev:
    files:
      - /usr/include
      - /usr/lib/*.a
      - /usr/lib/*.so
      - /usr/lib/pkgconfig

  libfontconfig-doc:
    files:
      - /usr/share/doc

  libfontconfig-man:
    files:
      - /usr/share/man

