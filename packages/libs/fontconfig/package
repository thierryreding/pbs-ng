description: A library for configuring and customizing font access
version: 2.14.0
license: custom

depends:
  - build-tools/meson
  - devel/glibc
  - libs/expat
  - libs/freetype
  - libs/json-c

files:
  - download:
      url: http://fontconfig.org/release/fontconfig-${version}.tar.gz
      sha1: 23d73ec85fe1eb56bb83b7e401bc8e52eef46a8a

packages:
  libfontconfig:
    files:
      - /etc/fonts
      - /usr/lib/*.so.*
      - /usr/share/fontconfig
      - /usr/share/xml

  libfontconfig-bin:
    files:
      - /usr/bin

  libfontconfig-dev:
    files:
      - /usr/include
      - /usr/lib/*.a
      - /usr/lib/*.so
      - /usr/lib/pkgconfig

  libfontconfig-doc:
    files:
      - /usr/share/doc

  libfontconfig-man:
    files:
      - /usr/share/man

