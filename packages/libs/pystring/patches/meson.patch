+project('pystring', ['cpp'],
+  version: '1.1.3',
+  meson_version: '> 0.50.0',
+  default_options: [
+    'buildtype=debugoptimized',
+    'warning_level=1'
+  ]
+)
+
+cpp = meson.get_compiler('cpp')
+cpp_args = cpp.get_supported_arguments([
+  '-Wall', '-Wextra', '-Wshadow', '-Wconversion', '-Wcast-qual', '-Wformat=2'
+])
+
+libpystring = shared_library('pystring',
+  [ 'pystring.h', 'pystring.cpp' ],
+  cpp_args: cpp_args,
+  soversion: '0',
+  install: true)
+
+install_headers('pystring.h', subdir: 'pystring')
