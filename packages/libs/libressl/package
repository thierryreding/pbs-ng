description: An open-source implementation of the Secure Sockets Layer (SSL) and Transport Layer Security (TLS) protocols
version: 2.8.0
license: Apache-1.0, BSD-4-clause, ISC

depends:
  - devel/glibc

provides:
  - libs/ssl

files:
  - download:
      url: https://ftp.openbsd.org/pub/OpenBSD/LibreSSL/libressl-${version}.tar.gz
      sha1: 96185da66b5966b0d951d7df5b8df7a6da23e82f

packages:
  libressl:
    files:
      - /etc/ssl
      - /usr/bin
      - /usr/lib/*.so.*
      - /usr/lib/ssl

  libressl-dev:
    files:
      - /usr/include
      - /usr/lib/*.a
      - /usr/lib/*.so
      - /usr/lib/pkgconfig

  libressl-man:
    files:
      - /usr/share/man

