package: common C routines used by GTK+ and other libraries
version: 2.54.3
license: LGPL-2.1

files:
  - download:
      url: http://ftp.gnome.org/pub/gnome/sources/glib/${major}.${minor}/glib-${version}.tar.xz
      sha1: 12d7466550156ac8a765f603b0df7604cdf34cfd

depends:
  - devel/glibc
  - libs/libffi
  - libs/pcre

packages:
  libglib:
    files:
      - /usr/lib/*.so.*

  libglib-dev:
    files:
      - /usr/include
      - /usr/lib/*.a
      - /usr/lib/*.so
      - /usr/lib/glib-${major}.0/include
      - /usr/lib/pkgconfig

