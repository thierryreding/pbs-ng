license: MIT

depends:
  - libs/cairo
  - libs/libinput
  - libs/libjpeg-turbo
  - libs/libxkbcommon
  - libs/mesa
  - libs/mtdev
  - libs/wayland
  - libs/wayland-protocols
  - xorg/lib/xcursor

files:
  - download:
      url: http://wayland.freedesktop.org/releases/weston-${version}.tar.xz
      sha1: df1da4a880920c515162e95b18f3709a46690be7

packages:
  weston:
    files:
      - /usr/bin
      - /usr/lib/libweston-${major}/*.so
      - /usr/lib/weston/weston-*
      - /usr/lib/weston/*.so
      - /usr/lib/*.so.*
      - /usr/share/weston

  weston-dev:
    files:
      - /usr/include
      - /usr/lib/pkgconfig

  weston-man:
    files:
      - /usr/share/man

