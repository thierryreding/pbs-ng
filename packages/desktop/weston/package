description: Reference implementation of a Wayland compositor
version: 3.0.0
license: MIT

depends:
  - libs/cairo
  - libs/libinput
  - libs/libjpeg
  - libs/libxkbcommon
  - libs/mesa
  - libs/mtdev
  - libs/wayland
  - libs/wayland-protocols
  - xorg/lib/xcursor

files:
  - download:
      url: http://wayland.freedesktop.org/releases/weston-${version}.tar.xz
      sha1: 0a75c2ee10f2453a073411157bb6ed029080669f

packages:
  weston:
    files:
      - /usr/bin
      - /usr/lib/libweston-${major}/*.so
      - /usr/lib/weston/weston-*
      - /usr/lib/weston/*.so
      - /usr/lib/*.so.*
      - /usr/share/weston

  weston-dev:
    files:
      - /usr/include
      - /usr/lib/pkgconfig

  weston-man:
    files:
      - /usr/share/man

